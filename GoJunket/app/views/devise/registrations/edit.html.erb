<h2>Make your profile more snazzy, <%= current_user.name.upcase %>!</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
  <%= f.label :avatar, "Profile pic", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.file_field :avatar %>
</div>
</div>
<br>
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true %>
</div>
<br>
<div class="field">
  <%= f.label :location, "Current City" %><br />
  <%= f.text_field :location, autofocus: true %>
</div>
<br>

<div class="form-group">
  <%= f.label :is_female, "Gender", class: 'col-sm-2 control-label'  %> <em>(Select the gender you identify as)</em>
<div class="col-sm-6">
  <%= f.radio_button :gender, :Female %> <%= f.label :gender, "Female" %>
  <%= f.radio_button :gender, :Male %> <%= f.label :gender, "Male" %>
</div>
</div>
<br>

<div class="form-group">
  <%= f.label :date_of_birth, class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.date_select :date_of_birth, start_year: 1920, end_year: 1997, class: 'form-control'  %>
</div>
</div>
<br>


<div class="form-group">
  <%= f.label :language, "What languages do you speak?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <% User.languages.keys.each do |key| %>
    <%= f.check_box :language %> <%= f.label key %>
  <% end %>
</div>
</div>
<br>

<div class="form-group">
  <%= f.label :relationship, "What's your situation?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.radio_button :relationship, :single %> <%= f.label :relationship, "Single" %>
  <%= f.radio_button :relationship, :taken %> <%= f.label :relationship, "Taken" %>
  <%= f.radio_button :relationship, :married %> <%= f.label :relationship, "Married" %>
</div>
</div>
<br>

<div class="form-group">
  <%= f.label :orientation, "What's your situation in the bedroom?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.radio_button :orientation, :straight %> <%= f.label :orientation, "Straight" %>
  <%= f.radio_button :orientation, :gay %> <%= f.label :orientation, "Gay" %>
  <%= f.radio_button :orientation, :bi %> <%= f.label :orientation, "Bi" %>
  <%= f.radio_button :orientation, :whatever %> <%= f.label :orientation, "Whatever" %>
</div>
</div>
<br>

<div class="form-group">
  <%= f.label :education, "What's your highest level of completed education?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.radio_button :education, :high_school %> <%= f.label :education, "High School" %>
  <%= f.radio_button :education, :course_certification %> <%= f.label :education, "Course Certification" %>
  <%= f.radio_button :education, :college %> <%= f.label :education, "College" %>
  <%= f.radio_button :education, :grad_school %> <%= f.label :education, "Grad School" %>
  <%= f.radio_button :education, :phd %> <%= f.label :education, "PhD" %>
</div>
</div>
<br>

<div class="form-group">
  <%= f.label :kids, "Have kiddos?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.radio_button :kids, true %> <%= f.label :kids, "Yes" %>
  <%= f.radio_button :kids, false %> <%= f.label :kids, "No" %>
</div>
</div>
<br>
<div class="form-group">
  <%= f.label :drinks, "Do you drink?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.radio_button :drinks, true %> <%= f.label :drinks, "Yes" %>
  <%= f.radio_button :drinks, false %> <%= f.label :drinks, "No" %>
</div>
</div>
<br>
<div class="form-group">
  <%= f.label :smokes, "Do you smoke?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <%= f.radio_button :smokes, true %> <%= f.label :smokes, "Yes" %>
  <%= f.radio_button :smokes, false %> <%= f.label :smokes, "No" %>
</div>
</div>
<br>

<div class="form-group">
  <%= f.label :interests, "What do you geek out on?", class: 'col-sm-2 control-label'  %>
<div class="col-sm-6">
  <% User.interests.keys.each do |key| %>
    <%= f.check_box :interests %> <%= f.label key %>
  <% end %>
</div>
</div>
<br>

<div class="field">
  <%= f.label :description %><em>(You have 500 characters, go!)</em><br />
  <%= f.text_area :description, autofocus: true, :maxlength=>500 %>
</div>
<br>
<div class="field">
  <%= f.label :email, "Update email" %><br />
  <%= f.email_field :email, autofocus: true %>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>

<div>We're still waiting for your confirmation: <%= resource.unconfirmed_email %></div>

  <% end %>
<br>
<div class="field">
  <%= f.label :password, "Update password" %> <i>(Go ahead and leave this blank if you don't need to change your password)</i><br />
  <%= f.password_field :password, autocomplete: "off" %>
</div>

<div class="field">
  <%= f.label :password_confirmation, "Confirm new password" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off" %>
</div>
<br>
<div class="field">
  <%= f.label :current_password %> <i>(Required to confirm all your changes)</i><br />
  <%= f.password_field :current_password, autocomplete: "off" %>
</div>

<div class="actions">
  <%= f.submit "Update" %>
</div>

<% end %>


<p><%= button_to "Deactivate my account", registration_path(resource_name), data: { confirm: "Are you absolutey, positively sure you want to close your account?" }, method: :delete %></p>

 
